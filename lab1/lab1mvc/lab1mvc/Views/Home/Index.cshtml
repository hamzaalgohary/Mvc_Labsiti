@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background-color: #000; /* Black background */
        color: #f5f5f5; /* Light text */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .hero {
        text-align: center;
        padding: 120px 20px;
        background: linear-gradient(180deg, #000000 0%, #111111 100%);
    }

        .hero h1 {
            font-size: 3rem;
            color: #00d1ff;
            margin-bottom: 20px;
            letter-spacing: 1px;
        }

        .hero p {
            font-size: 1.2rem;
            color: #ccc;
            max-width: 600px;
            margin: 0 auto 30px;
        }

    .btn-primary {
        background-color: #00d1ff;
        border: none;
        color: #000;
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: bold;
        transition: 0.3s;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #00b4e0;
            transform: scale(1.05);
        }

    .features {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 30px;
        margin: 60px auto;
        max-width: 1000px;
        padding: 0 20px;
    }

    .card {
        background-color: #111;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 209, 255, 0.2);
        padding: 30px;
        width: 280px;
        transition: 0.3s;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 0 25px rgba(0, 209, 255, 0.4);
        }

        .card h3 {
            color: #00d1ff;
            margin-bottom: 10px;
        }

        .card p {
            color: #ccc;
        }
</style>

<div class="hero">
    <h1>Welcome to Your MVC App 🌙</h1>
    <p>Clean, modern, and elegant — built with ASP.NET Core MVC. Explore features and start building powerful applications today.</p>
</div>

<div class="features">
    <div class="card">
        <h3>🚀 Fast</h3>
        <p>Optimized for speed and scalability using ASP.NET Core technology.</p>
    </div>

    <div class="card">
        <h3>🧠 Smart</h3>
        <p>Use clean architecture and best coding practices for maintainable projects.</p>
    </div>

    <div class="card">
        <h3>🎨 Beautiful</h3>
        <p>Modern UI with dark mode and responsive design that looks great everywhere.</p>
    </div>
</div>
