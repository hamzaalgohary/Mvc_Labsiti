@model lab1mvc.Models.Department
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Edit Department</h2>

<form asp-action="Edit" asp-controller="Department" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Manager</label>
        <input asp-for="Manager" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Location</label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Branch</label>
        <select asp-for="Branch" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(lab1mvc.Models.Branch)))
            {
                <option value="@value" selected="@(Model.Branch == (lab1mvc.Models.Branch)value)">
                    @value
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="GetAllDepartments" class="btn btn-secondary">Cancel</a>
</form>
