@model Department

<h2>Add Department</h2>
<form asp-action="AddNewDepartment" method="post">
    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Manager"></label>
        <input asp-for="Manager" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Branch"></label>
        <select asp-for="Branch" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(Branch)))
            {
                <option value="@value">@value</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Add Department</button>
</form>


