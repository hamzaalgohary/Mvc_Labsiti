@model lab1mvc.Models.Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<h2 class="mb-3">Instructor Details</h2>

<div class="card shadow-sm p-4">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@Model.Image" alt="@Model.Name" class="img-fluid rounded border" style="max-height: 250px;" />
        </div>

        <div class="col-md-8">
            <h3>@Model.Name</h3>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Salary:</strong> @Model.Salary</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Department:</strong> @Model.Department?.Name</p>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"
                   onclick="return confirm('Are you sure you want to delete this instructor?');">Delete</a>
                <a asp-action="GetAll" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
